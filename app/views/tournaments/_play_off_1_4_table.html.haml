- if @tournament.groups.where(group_type: 2).first.matches.present?
  .row
    .col-md-6
      #play_off_1_4
        %table#html_table.table-striped.m-table.m-table--head-bg-brand{:width => "100%"}
          %thead
            %tr
              %th{style: "text-align: center;", :title => "Team 1 title", colspan: 3}
                %h6 PLAYOFF 1/4
          %thead
            %tr
              %th{ style: "text-align: center;", :title => "Team 1 title"} Team 1 title
              %th{ style: "text-align: center;", :title => "Score"} Score
              %th{ style: "text-align: center;", :title => "Team 2 title"} Team 2 title
          %tbody
            - @tournament.groups.where(group_type: 2).first.matches.includes(:scores).each do |match|
              %tr
                %td{ style: "text-align: center;" }= match.team_1.title
                %td{ style: "text-align: center;" }
                  .row
                    .col-md-4
                      %input.form-control.m-input{ onchange: "set_score('#{match["team_1_id"]}', '#{match["id"]}', this.value)", value: match.team_1.score }
                    .col-md-4
                      %span{ style: "text-align: center; width: 30px" } &mdash;
                    .col-md-4
                      %input.form-control.m-input{ onchange: "set_score('#{match["team_2_id"]}', '#{match["id"]}', this.value)", value:  match.team_2.score }
                %td{ style: "text-align: center;" }= match.team_2.title
    .col-m-6

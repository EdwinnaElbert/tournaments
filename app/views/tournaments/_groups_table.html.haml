- if @tournament.groups.where(group_type: 0).first.matches.present?
  .row
    .col-md-6
      #a_group_table
        %table#html_table.table-striped.m-table.m-table--head-bg-success{:width => "100%"}
          %thead
            %tr
              %th{style: "text-align: center;", :title => "Team 1 title", colspan: 3}
                %h6 A GROUP
          %thead
            %tr
              %th{ style: "text-align: center;", :title => "Team 1 title"} Team 1 title
              %th{ style: "text-align: center;", :title => "Score"} Score
              %th{ style: "text-align: center;", :title => "Team 2 title"} Team 2 title
          %tbody
            - @a_matches.each do |match|
              %tr
                %td{ style: "text-align: center;" }= match["team_1_title"]
                %td{ style: "text-align: center;" }
                  .row
                    .col-md-4
                      %input.form-control.m-input{ onchange: "set_score('#{match["team_1_id"]}', '#{match["id"]}', this.value)", value: match["score_1"] }
                    .col-md-4
                      %span{ style: "text-align: center; width: 30px" } &mdash;
                    .col-md-4
                      %input.form-control.m-input{ onchange: "set_score('#{match["team_2_id"]}', '#{match["id"]}', this.value)", value:  match["score_2"] }
                %td{ style: "text-align: center;" }= match["team_2_title"]
    .col-md-6
      #b_group_table
        %table#html_table.table-striped.m-table.m-table--head-bg-success{:width => "100%"}
          %thead
            %tr
              %th{style: "text-align: center;", :title => "Team 1 title", colspan: 3}
                %h6 B GROUP
          %thead
            %tr
              %th{ style: "text-align: center;", :title => "Team 1 title"} Team 1 title
              %th{ style: "text-align: center;", :title => "Score"} Score
              %th{ style: "text-align: center;", :title => "Team 2 title"} Team 2 title
          %tbody
            - @b_matches.each do |match|
              %tr
                %td{ style: "text-align: center;" }= match["team_1_title"]
                %td{ style: "text-align: center;" }
                  .row
                    .col-md-4
                      %input.form-control.m-input{ onchange: "set_score('#{match["team_1_id"]}', '#{match["id"]}', this.value)", value: match["score_1"] }
                    .col-md-4
                      %span{ style: "text-align: center" } &mdash;
                    .col-md-4
                      %input.form-control.m-input{ onchange: "set_score('#{match["team_2_id"]}', '#{match["id"]}', this.value)", value: match["score_2"] }
                %td{ style: "text-align: center;" }= match["team_2_title"]

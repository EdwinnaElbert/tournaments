.m-portlet__head
  .m-portlet__head-caption
    .m-portlet__head-title
      %span.m-portlet__head-icon.m--hide
        %i.la.la-gear
      = form_tag("/tournaments/#{@tournament.id}/games", method: :post) do
        = submit_tag "Generate", class: "btn btn-primary"
    - if @tournament.groups.where(group_type: 0).first.matches.present?
      %button.btn.btn-primary#generate_game{ onclick: "generate_scores('#{@a_matches.rows}', '#{@b_matches.rows}')" } Generate scores
  %br
  %hr
  .m-portlet__body
    = render "table"

.row
  .col-lg-6.col-md-6.col-s-12
    %table#html_table.table-striped.m-table.m-table--head-bg-success{:width => "100%", style: "margin-top: 70px"}
      %thead
        %tr
          %th{style: "text-align: center;", :title => "Team 1 title", colspan: 3}
            %h3= t("group.#{group_index}")

      -# TABLE HEAD

      %thead
        %tr
          %th{ style: "text-align: center;", :title => "Team 1 title"} Team 1 title
          %th{ style: "text-align: center;", :title => "Score"} Score
          %th{ style: "text-align: center;", :title => "Team 2 title"} Team 2 title

      -# TABLE BODY

      %tbody
        - group.each do |match|
          %tr
            %td{ style: "text-align: center;" }=  match.scores.first.team.title
            %td{ style: "text-align: center;" }
              .row
                .col-md-4
                  %input.form-control.m-input{ style: "text-align: center;", onchange: "set_score('#{match.teams.first.id}', '#{match.id}', this.value)", value: match.scores.first.score }
                .col-md-4
                  %span{ style: "text-align: center" } &mdash;
                .col-md-4
                  %input.form-control.m-input{ style: "text-align: center;", onchange: "set_score('#{match.teams.last.id}', '#{match.id}', this.value)", value: match.scores.last.score }
            %td{ style: "text-align: center;" }= match.scores.second.team.title
    .col-lg-6.col-md-6

.col-lg-12.question_container
  %h5.m--font-primary
    = t('surveys.question')
    = t('surveys.num')
    %span= i
    - if question.question_type == 1
      = t('surveys.only')
    - else
      = t('surveys.multiple')

  %input.form-control.m-input{ required: 'required', type: 'text', name: "survey[survey_questions_attributes][#{i}][question]", "data-validate" => true, value: question.question }
  %input{ type: "hidden", name: "survey[survey_questions_attributes][#{i}][question_type]", value: question.question_type }
  - if question.id.present?
    %input{ type: "hidden", name: "survey[survey_questions_attributes][#{i}][id]", value: question.id.to_s }
    %input{ type: "hidden", class: "destroy delete_#{i}", name: "survey[survey_questions_attributes][#{i}][_destroy]", value: 0 }
  .answers.col-lg-10{ id: "answers_#{i}" }
    %h6.m--font-brand= t('surveys.answers')
    - question.survey_question_answers.order("weight" => "asc").each_with_index do |a, k|
      .form-group.m-form__group.row.option_row.align-items-center
        .col-md-10
          %div
            %div
              - if a.id.present?
                %input{ type: "hidden", name: "survey[survey_questions_attributes][#{i}][survey_question_answers_attributes][#{k}][id]", value: a.id }
                %input{ type: "hidden", class: "destroy delete_#{k}", name: "survey[survey_questions_attributes][#{i}][survey_question_answers_attributes][#{k}][_destroy]", value: 0 }
              %input.form-control.m-input{ required: "required", type: "text", name: "survey[survey_questions_attributes][#{i}][survey_question_answers_attributes][#{k}][answer]", "data-validate" => true, value: a.answer }
        - if k > 0
          .col-md-2
            %span.m-portlet__nav-link.btn.m-btn.m-btn--hover-danger.m-btn--icon.m-btn--icon-only.m-btn--pill{ onclick: "remove_option(this);" }
              %i.la.la-trash.m--font-danger

  .m-form__group.form-group.row
    .col-lg-10
      %span.m-link.m-link--state.m-link--success{ onclick: "add_multiple_option('#{i}');" }= t('surveys.add_option')
      &nbsp;&nbsp;
      %span.m-link.m-link--state.m-link--danger{ onclick: "remove_question(this);" }= t('surveys.remove_question')
  .m-form__seperator.m-form__seperator--dashed.m-form__seperator--space

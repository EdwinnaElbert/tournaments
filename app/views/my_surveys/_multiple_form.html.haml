.col-lg-12.question_container
  %h5.m--font-primary
    Question #
    %span= i
    - if question.question_type == 1
      (Only answer)
    - else
      (Multiple answer)

  %input.form-control.m-input{ required: 'required', type: 'text', name: "survey[survey_questions_attributes][#{i}][question]", "data-validate" => true, value: question.question }
  %input{ type: "hidden", name: "survey[survey_questions_attributes][#{i}][question_type]", value: question.question_type }
  - if question.id.present?
    %input{ type: "hidden", name: "survey[survey_questions_attributes][#{i}][id]", value: question.id.to_s }
    %input{ type: "hidden", class: "delete_#{i}", name: "survey[survey_questions_attributes][#{i}][_destroy]", value: 0 }
  .answers.col-lg-10
    %h6.m--font-brand Answers
    - question.survey_question_answers.order("weight" => "asc").each_with_index do |a, k|
      - if a.id.present?
        %input{ type: "hidden", name: "survey[survey_questions_attributes][#{i}][survey_question_answers_attributes][#{k}][id]", value: a.id.to_s }
        %input{ type: "hidden", class: "delete_#{k}", name: "survey[survey_questions_attributes][#{i}][survey_question_answers_attributes][#{k}][_destroy]", value: 0 }
      .form-group.m-form__group.row.option_row.align-items-center{ class: "option_#{k}" }
        .col-md-10
          %div
            %div
              %input.form-control.m-input{ required: "required", type: "text", name: "survey[survey_questions_attributes][#{i}][survey_question_answers_attributes][#{k}][answer]", "data-validate" => true, value: a.answer }
        - if k > 0
          .col-md-2
            %a.m-portlet__nav-link.btn.m-btn.m-btn--hover-danger.m-btn--icon.m-btn--icon-only.m-btn--pill{ href: 'js:', onclick: "remove_option(this);" }
              %i.la.la-trash.m--font-danger

  .m-form__group.form-group.row
    .col-lg-10
      %a.m-link.m-link--state.m-link--success{ href: 'js:', onclick: "add_multiple_option('#{i}');" } Add option
      &nbsp;&nbsp;
      %a.m-link.m-link--state.m-link--danger{ href: 'js:', onclick: "remove_question(this);" } Remove Question
  .m-form__seperator.m-form__seperator--dashed.m-form__seperator--space

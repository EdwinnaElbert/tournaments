- uuid = SecureRandom.uuid
.col-lg-12{ class: "question_#{uuid}" }
  %h5.m--font-primary
    Question #
    %span= i
    (Free answer)

  %input.form-control.m-input{ required: 'required', type: 'text', name: "survey[survey_questions_attributes][#{uuid}][title]", "data-validate" => true, value: question.question }
  - if question.id.present?
    %input{ type: "hidden", name: "survey[survey_questions_attributes][#{uuid}][id]", value: question.id.to_s }
    %input{ type: "hidden", class: "delete_#{uuid}", name: "survey[survey_questions_attributes][#{uuid}][_delete]", value: 0 }
  %input{ type: "hidden", name: "survey[survey_questions_attributes][#{uuid}][question_type]", value: question.question_type }

  .m-form__group.form-group.row
    .col-lg-10
      %a.m-link.m-link--state.m-link--danger{ href: 'js:', onclick: "remove_question('#{uuid}');" } Remove Question
  .m-form__seperator.m-form__seperator--dashed.m-form__seperator--space
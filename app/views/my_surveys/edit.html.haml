= form_for @survey, url: my_survey_path(@survey), 
  html: { method: "put", class: "m-form m-form--fit m-form--label-align-right",
  style: "width: 100%" } do |f|
  .col-lg-12
    .row
      .col-lg-12
        .m-portlet
          .m-portlet__head
            .m-portlet__head-caption
              .m-portlet__head-title
                %span.m-portlet__head-icon.m--hide
                  %i.la.la-gear
                %h3.m-portlet__head-text
                  Edit Survey

          .m-portlet__body
            -# = error_messages_for(@survey)
            = render "main_form", f: f
            .m-form__seperator.m-form__seperator--dashed.m-form__seperator--space
            .form-group.m-form__group.row
              .col-lg-6#questions_body
                - @survey.survey_questions.order("weight" => "asc").each_with_index do |q, i|
                  - if q.question_type == 1
                    = render "multiple_form", question: q, i: i + 1
                  - elsif q.question_type == 2
                    = render "multiple_form", question: q, i: i + 1
                  - elsif q.question_type == 3
                    = render "paragraph_form", question: q, i: i + 1

          .m-portlet__body
            %br/
            %br/
            %a.btn.btn-brand.m-btn.m-btn--custom.m-btn--icon{ onclick: "add_multiple_choice()", href: "js:" }
              %span
                %i.la.la-circle-thin
                %span Add Only answer
            %a.btn.btn-accent.m-btn.m-btn--custom.m-btn--icon{ onclick: "add_checkboxes_choice()", href: "js:" }
              %span
                %i.la.la-check-square
                %span Add Multiple answer
            %a.btn.btn-focus.m-btn.m-btn--custom.m-btn--icon{ onclick: "add_paragraph_choice()", href: "js:" }
              %span
                %i.la.la-smile-o
                %span Add Free answer
            %br/
            %br/

          .m-portlet__foot--fit
            .m-form__actions.m-form__actions
              %button.btn.btn-primary{ type: "submit" }
                Save
              = link_to "Cancel", my_surveys_path, class: "btn btn-secondary"

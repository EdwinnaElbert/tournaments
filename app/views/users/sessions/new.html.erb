<%= stylesheet_link_tag 'vendors.bundle.css', media: 'all', 'data-turbolinks-track': 'reload' %>
<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
      <div class="m-grid__item m-grid__item--fluid m-grid m-grid--desktop m-grid--ver-desktop m-grid--hor-tablet-and-mobile m-login m-login--6" id="m_login">
  <div class="m-grid__item   m-grid__item--order-tablet-and-mobile-2  m-grid m-grid--hor m-login__aside " id="login_background">
    <div class="m-grid__item">
      <div class="m-login__logo">
        <a href="#">
          <%= image_tag("logo-4.png") %>
        </a>
      </div>
    </div>

    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver">
      <div class="m-grid__item m-grid__item--middle">
        <span class="m-login__title">Whatever CTA's wave purpose important exit element</span>
        <span class="m-login__subtitle">Lorem ipsum amet estudiat</span>
      </div>
    </div>

    <div class="m-grid__item">
      <div class="m-login__info">
        <div class="m-login__section">
          <a href="#" class="m-link">&copy 2018 Metronic</a>
        </div>
        <div class="m-login__section">
          <a href="#" class="m-link">Privacy</a>
          <a href="#" class="m-link">Legal</a>
          <a href="#" class="m-link">Contact</a>
        </div>
      </div>
    </div>
</div>

<div class="m-grid__item m-grid__item--fluid  m-grid__item--order-tablet-and-mobile-1  m-login__wrapper">
<!--begin::Head-->
  <div class="m-login__head">
    <span>Don't have an account?</span>
    <%= link_to "Sign Up", new_user_registration_path, class: "m-link m--font-danger" %>
  </div>
<!--end::Head-->

  <!--begin::Body-->
  <div class="m-login__body">

    <!--begin::Signin-->
    <div class="m-login__signin">
      <div class="m-login__title">
        <h3>Create Account</h3>
      </div>

      <!--begin::Form-->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
        <div class="form-group m-form__group">
          <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control m-input", placeholder: "Email" %>
        </div>
        <!-- <div class="form-group m-form__group">
          <%= f.text_field :phone, autofocus: true, autocomplete: "off", class: "form-control m-input", placeholder: "Phone Number" %>
        </div> -->
        <div class="form-group m-form__group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control m-input m-login__form-input--last", placeholder: "Password" %>
        </div>

        <%= f.submit "Log in", class: "btn btn-primary m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary", html: { id: "m_login_signin_submit" } %><br />
      <!--begin::Action  ,-->
      <div class="m-login__action">
        <%= link_to new_user_password_path, class: 'm-link' do %>
          <span>Forgot Password ?</span>
        <% end %>
      </div>
      <!--end::Action-->
      <!--begin::Divider-->
      <div class="m-login__form-divider">
        <div class="m-divider">
          <span></span>
          <span>OR</span>
          <span></span>
        </div>
      </div>
      <!--end::Divider-->

      <!--begin::Options-->
      <div class="m-login__options">
        <a href="#" class="btn btn-primary m-btn m-btn--pill  m-btn  m-btn m-btn--icon">
          <span>
            <i class="fab fa-facebook-f"></i>
            <span>Facebook</span>
          </span>
        </a>

        <a href="#" class="btn btn-info m-btn m-btn--pill  m-btn  m-btn m-btn--icon">
          <span>
            <i class="fab fa-twitter"></i>
            <span>Twitter</span>
          </span>
        </a>

        <a href="#" class="btn btn-danger m-btn m-btn--pill  m-btn  m-btn m-btn--icon">
          <span>
            <i class="fab fa-google"></i>
            <span>Google</span>
          </span>
        </a>
      </div>
      <!--end::Options-->
    </div>
    <!--end::Signin-->
  </div>
  <!--end::Body-->

</div>
<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
<script>
  WebFont.load({
    google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
    active: function() {
        sessionStorage.fonts = true;
    }
  });
</script>
<% end %>
